<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@color/white"
    >

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardElevation="10dp"
       android:padding="10dp"
       app:cardCornerRadius="10dp"
       android:layout_margin="10dp"
       >


       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/white"
           >

           <ImageView
               android:id="@+id/sepetYemekImageView"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginStart="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="16dp"
               android:src="@drawable/bike_resim"
               app:layout_constraintEnd_toStartOf="@+id/sepetYemekFiyatTextView"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/sepetYemekTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="16dp"
               android:layout_marginTop="16dp"
               android:text="Ayran"
               android:textSize="25dp"
               app:layout_constraintStart_toEndOf="@+id/sepetYemekImageView"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/sepetYemekFiyatTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="32dp"
               android:layout_marginTop="16dp"
               android:text="Fiyat:55₺"
               app:layout_constraintStart_toEndOf="@+id/sepetYemekImageView"
               app:layout_constraintTop_toBottomOf="@+id/sepetYemekTextView" />

           <TextView
               android:id="@+id/sepetYemekAdetTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="32dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="16dp"
               android:text="Adet:3"
               android:textSize="20dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@+id/sepetYemekImageView"
               app:layout_constraintTop_toBottomOf="@+id/sepetYemekFiyatTextView" />

           <ImageView
               android:id="@+id/deleteYemekImageView"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="16dp"
               android:src="@drawable/delete_resim"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/sepetToplamTutarTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginEnd="16dp"
               android:text="165₺"
               android:textSize="25dp"
               android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/deleteYemekImageView" />

       </androidx.constraintlayout.widget.ConstraintLayout>




   </androidx.cardview.widget.CardView>


</LinearLayout>